<script>
    function showSection(type) {
        document.getElementById('prosthesis-section').classList.toggle('hidden', type !== 'prosthesis');
        document.getElementById('cooling-section').classList.toggle('hidden', type !== 'cooling');
        document.querySelectorAll('.tab').forEach(t => t.classList.remove('active'));
        event.target.classList.add('active');
        document.getElementById('resultBox').style.display = 'none';
    }

    function calculateCost() {
        const cost = parseFloat(document.getElementById('cost').value) || 0;
        const deductible = parseFloat(document.getElementById('deductible').value) || 0;
        const coinsurancePercent = parseFloat(document.getElementById('coinsurance').value) || 0;

        let resDeductible = Math.min(cost, deductible);
        let remaining = cost - resDeductible;
        let resCoinsurance = (remaining * (coinsurancePercent / 100));
        let total = resDeductible + resCoinsurance;

        document.getElementById('resDeductible').innerText = '$' + resDeductible.toFixed(2);
        document.getElementById('resCoinsurance').innerText = '$' + resCoinsurance.toFixed(2);
        document.getElementById('resTotal').innerText = '$' + total.toFixed(2);
        document.getElementById('resultBox').style.display = 'block';
    }
</script>

